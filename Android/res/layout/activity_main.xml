<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	style="@style/Holo">

	<TextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_centerInParent="true"
		android:text="\t\t"
		android:id="@+id/activitymainTextView1"
		android:gravity="center_horizontal"
		android:textSize="30sp"/>

	<TextView
		android:layout_height="wrap_content"
		android:text="Wifi:\t\t\t"
		android:layout_width="wrap_content"
		android:layout_above="@id/activitymainTextView1"
		android:layout_toLeftOf="@id/activitymainTextView1"
		android:textSize="20sp"
		android:textColor="@color/black"/>

	<TextView
		android:layout_height="wrap_content"
		android:text="\t\t蓝牙："
		android:layout_width="wrap_content"
		android:layout_above="@id/activitymainTextView1"
		android:layout_toRightOf="@id/activitymainTextView1"
		android:textSize="20sp"
		android:textColor="@color/black"/>

	<Button
		android:id="@+id/imageView3"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/bt"
		android:layout_gravity="left"
		android:layout_toRightOf="@id/activitymainTextView1"
		android:layout_below="@id/activitymainTextView1"/>

	<Button
		android:id="@+id/imageView4"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/wifi"
		android:layout_gravity="right"
		android:layout_toLeftOf="@id/activitymainTextView1"
		android:layout_below="@id/activitymainTextView1"/>

</RelativeLayout>

