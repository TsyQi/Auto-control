<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- toolbar（actionbar）color -->
        <item name="colorPrimaryDark">@color/deep_green</item>
        <item name="android:windowBackground">@android:color/white</item>
        <!-- SearchView -->
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
    </style>

    <style name="AppTheme" parent="@style/AppBaseTheme"/>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
    <!--
Background for the search query section (e.g. EditText)
<item name="queryBackground">...</item>
Background for the actions section (e.g. voice, submit)
<item name="submitBackground">...</item>
Close button icon
<item name="closeIcon">...</item>
Search button icon
<item name="searchIcon">...</item>
Go/commit button icon
<item name="goIcon">...</item>
Voice search button icon
<item name="voiceIcon">...</item>
Commit icon shown in the query suggestion row
<item name="commitIcon">...</item>
Layout for query suggestion rows
<item name="suggestionRowLayout">...</item>
    -->
    </style>
    <declare-styleable name="MaterialView">
        <attr name="mm_color" format="color"/>
        <attr name="mm_visible" format="boolean"/>
        <attr name="mm_scale" format="integer"/>
        <attr name="mm_transformDuration" format="integer"/>
        <attr name="mm_strokeWidth" format="integer"/>
        <attr name="mm_rtlEnabled" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="MaterialSection">

        <attr name="sectionColorIcon" format="color" />

        <attr name="sectionColorText" format="color" />

        <attr name="sectionColorNotification" format="color" />

        <attr name="sectionBackgroundColorPressed" format="color" />

        <attr name="sectionBackgroundColorSelected" format="color" />
        <attr name="sectionBackgroundColor" format="color" />

    </declare-styleable>



    <declare-styleable name="MaterialNavigationDrawer">

        <attr name="rippleBackport" format="boolean" />
<!-- supporto del ripple nelle versioni precedenti di android -->

        <attr name="drawerType" format="integer" />
<!-- Tipologia del drawer -->

        <attr name="uniqueToolbarColor" format="boolean" />
<!-- La toolbar non cambia mai di colore -->

        <attr name="singleAccount" format="boolean" />
<!-- utente singolo (senza pulsante di cambio) -->

        <attr name="multipaneSupport" format="boolean" />

        <attr name="drawerColor" format="color" />
<!-- Colore del drawer -->

        <attr name="sectionStyle" format="reference" />

        <attr name="subheaderStyle" format="reference"/>

        <attr name="accountStyle" format="reference" />

        <attr name="learningPattern" format="boolean" />
<!-- true -> attivo, false -> disattivato -->

        <attr name="defaultSectionLoaded" format="integer" />
<!-- la prima section ad essere caricata -->

        <attr name="toolbarElevation" format="boolean" />

    </declare-styleable>



    <declare-styleable name="MaterialSubheader">

        <attr name="subheaderTitleColor" format="color"/>

    </declare-styleable>


    
    <declare-styleable name="MaterialAccount">

        <attr name="titleColor" format="color" />

        <attr name="subtitleColor" format="color" />

    </declare-styleable>

</resources>